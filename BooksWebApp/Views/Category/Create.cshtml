@model Category

<h1>Create New Category</h1>
<form>
	<div class ="border p-3 mt-4">
		<div class = "nb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" class = "form-control"/>
		</div>

		<div class = "nb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class = "form-control"/>
		</div>
		<br />
		<button 
			type="submit" 
			class = "btn-primary" 
			style="width:150px">
			Create
		</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px">
			Back to List
		</a>

	</div>

</form>

